{
    "name": "gmostafa/php-graphql-client",
    "description": "GraphQL client and query builder.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "graphql",
        "graph-ql",
        "client",
        "php",
        "query-builder",
        "query",
        "builder"
    ],
    "authors": [
        {
            "name": "Mostafa Ghoneimy",
            "email": "emostafagh@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "GraphQL\\": "src/",
            "GraphQL\\SchemaObject\\": "schema_object/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQL\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/generate_schema_objects"],
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "~6.0",
        "ext-json": "*",
        "ext-readline": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "codacy/coverage": "^1.4"
    }
}
